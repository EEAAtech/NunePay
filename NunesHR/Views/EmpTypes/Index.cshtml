@model IEnumerable<NunesHR.EmpTypes>


@{
    ViewBag.Title = NunesHR.MyExtensions.GetTitle(GetType().Name);
}

<h2>@NunesHR.MyExtensions.CamelToSentence(ViewBag.Title)</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<h5><strong>NOTE:</strong>: White Collar employee types are those that will get their full months salary provided that they work on all Non-Sundays</h5>
<h5>The rest will get full salary if they work 26 days a month. </h5>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmpType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HasDailyAllowance)
        </th>
        <th>
            White Collar
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EmpType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HasDailyAllowance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WhiteColar)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.EmpTypeID }) |
            @Html.ActionLink("Allowance", "Index","Allowances", new { id=item.EmpTypeID }, null) 
        </td>
    </tr>
}

</table>
