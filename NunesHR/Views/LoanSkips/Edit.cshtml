@model NunesHR.LoanSkip

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Skip Loan: Monthly Amount is @ViewBag.ToPay</h4>
        <hr />
