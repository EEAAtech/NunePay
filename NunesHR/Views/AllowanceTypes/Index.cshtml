@model IEnumerable<NunesHR.AllowanceTypes>


@{
    ViewBag.Title = NunesHR.MyExtensions.GetTitle(GetType().Name);
}

<h2>@NunesHR.MyExtensions.CamelToSentence(ViewBag.Title)</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AllowanceType)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AllowanceType)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ATID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ATID }) 
            
        </td>
    </tr>
}

</table>
