@model NunesHR.Payroll

@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@ViewBag.Title</h2>


@using (Html.BeginForm((string) ViewBag.action, "Payrolls",FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Choose Period</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            @Html.LabelFor(model => model.GenMonth, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PayMonth", (IEnumerable<SelectListItem>) ViewBag.MonthBox, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.GenMonth, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GenYear, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PayYear", (IEnumerable<SelectListItem>) ViewBag.YearBox, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.GenYear, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <lable class = "control-label col-md-2">Employee Type</lable> 
            <div class="col-md-10">
                @Html.DropDownList("EmpTypeID",null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.GenYear, "", new { @class = "text-danger" })
            </div>
        </div>

       
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@ViewBag.Title" class="btn btn-default" />
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
